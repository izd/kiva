<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="LoanStatsOverlay">
        <item name="android:gravity">center</item>
        <item name="android:background">#b3000000</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
    </style>

    <style name="SentenceTextView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowColor">#999</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>
    <style name="SentenceTextView.Words">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFF</item>

    </style>
    <style name="SentenceTextView.Options">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#88CCCCCC</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">#999</item>
    </style>
    <style name="LoanStats">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LoanStats.Values">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoanStats.Titles">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="CustomProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>

    </style>

    <style name="Button">
        <item name="android:background">@drawable/full_bleed_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
