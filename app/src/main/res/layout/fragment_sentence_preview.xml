<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:layout_margin="0dp"
        android:id="@+id/llSentencePreview"
        >

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sentence_start"
            style="@style/SentenceTextView.Words"
            android:id="@+id/tvSentenceStart"
            />

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SentenceTextView.Options"
            android:text="WOMEN"
            android:id="@+id/tvGroup"
            />

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SentenceTextView.Words"
            android:text="in"
            android:id="@+id/tvIn"
            />

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SentenceTextView.Options"
            android:id="@+id/tvCountry"
            android:text="BOLIVIA"
            />

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNeed"
            android:text="who need money for"
            style="@style/SentenceTextView.Words"
            />

        <com.zackhsi.kiva.helpers.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SentenceTextView.Options"
            android:text="arts"
            android:id="@+id/tvSector"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/sentence_button"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:background="@drawable/full_bleed_button_selector"
        android:id="@+id/btnResults"
        />
</RelativeLayout>
