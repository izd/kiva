<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>

    <style name="LoanStatsOverlay">
        <item name="android:gravity">center</item>
        <item name="android:background">#b3000000</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
    </style>

</resources>
