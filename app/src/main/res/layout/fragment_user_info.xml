<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llWhereabouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUser"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvWhereabouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="San Francisco, CA"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvLoanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 loans"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <View
        android:id="@+id/horizontalDivider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/llWhereabouts"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvLoanBecause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalDivider"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="I loan because..."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLoanBecause"
        android:layout_alignStart="@+id/tvLoanBecause"
        android:layout_below="@+id/tvLoanBecause"
        android:layout_marginTop="500dp"
        android:text="TEXT!!!" />

</RelativeLayout>